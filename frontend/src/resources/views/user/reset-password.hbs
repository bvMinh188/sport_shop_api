{{!-- Reset Password Page --}}
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Đặt lại mật khẩu</title>
    <link rel="stylesheet" href="/css/auth.css">
</head>
<body class="auth-page">
    <div class="auth-container">
        <h2>Đặt lại mật khẩu</h2>
        <div id="message" class="alert"></div>
        
        <form id="resetPasswordForm">
            <div class="form-group">
                <label for="password">Mật khẩu mới</label>
                <input type="password" class="form-control" id="password" name="password" required>
            </div>
            <div class="form-group">
                <label for="confirmPassword">Xác nhận mật khẩu</label>
                <input type="password" class="form-control" id="confirmPassword" name="confirmPassword" required>
            </div>
            <button type="submit" class="btn-primary">Đặt lại mật khẩu</button>
            <div class="auth-links">
                <a href="/auth/login">Quay lại đăng nhập</a>
            </div>
        </form>
    </div>

    <div class="message-container"></div>

    <!-- Add jQuery -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    
    <script>
        $(document).ready(function() {
            function getTokenFromPath() {
                const pathParts = window.location.pathname.split('/');
                return pathParts[pathParts.length - 1];
            }

            $('#resetPasswordForm').submit(function(e) {
                e.preventDefault();
                const password = $('#password').val();
                const confirmPassword = $('#confirmPassword').val();
                const token = getTokenFromPath();
                const submitBtn = $(this).find('button[type="submit"]');
                const originalText = submitBtn.text();

                if (password !== confirmPassword) {
                    showMessage('Mật khẩu xác nhận không khớp', 'error');
                    return;
                }

                submitBtn.prop('disabled', true)
                    .html('<i class="fas fa-spinner fa-spin"></i> Đang xử lý...');

                $.ajax({
                    url: 'http://localhost:3000/api/auth/reset-password',
                    method: 'POST',
                    contentType: 'application/json',
                    data: JSON.stringify({ 
                        token,
                        password
                    }),
                    success: function(response) {
                        if (response.success) {
                            showMessage('Đặt lại mật khẩu thành công', 'success');
                            setTimeout(() => {
                                window.location.href = '/auth/login';
                            }, 2000);
                        } else {
                            showMessage(response.message || 'Có lỗi xảy ra', 'error');
                            submitBtn.prop('disabled', false).text(originalText);
                        }
                    },
                    error: function(xhr) {
                        showMessage(xhr.responseJSON?.message || 'Có lỗi xảy ra', 'error');
                        submitBtn.prop('disabled', false).text(originalText);
                    }
                });
            });

            function showMessage(message, type = 'success') {
                const icon = type === 'success' ? 'check-circle' : 'exclamation-circle';
                const messageElement = $(`
                    <div class="message ${type}">
                        <i class="fas fa-${icon}"></i>
                        ${message}
                    </div>
                `);
                
                $('.message-container').append(messageElement);
                
                setTimeout(() => {
                    messageElement.addClass('hiding');
                    setTimeout(() => {
                        messageElement.remove();
                    }, 300);
                }, 2000);
            }
        });
    </script>
</body> 