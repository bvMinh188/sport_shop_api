<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Đăng Ký</title>
    <link rel="stylesheet" href="/css/auth.css">
</head>
<body class="auth-page">
    <div class="auth-container">
        <h2>Đăng Ký</h2>
        <div id="message" class="alert"></div>
        
        <form id="form-register">
            <div class="form-group">
                <label for="username">Tên người dùng</label>
                <input type="text" class="form-control" id="username" name="username" placeholder="Nguyễn Văn A.." required>
            </div>
            <div class="form-group">
                <label for="email">Email</label>
                <input type="email" class="form-control" id="email" name="email" placeholder="nva@gmail.com" required>
            </div>
            <div class="form-group">
                <label for="password">Mật khẩu</label>
                <input type="password" class="form-control" id="password" name="password" placeholder="*****" required>
            </div>
            <div class="form-group">
                <label for="phone">Số điện thoại</label>
                <input type="tel" class="form-control" id="phone" name="phone" placeholder="0123456789" required>
            </div>
            <button type="submit" class="btn-primary">Đăng ký</button>
            <div class="auth-links">
                <p><a href="/auth/login">Đã có tài khoản? Đăng nhập</a></p>
            </div>
        </form>
    </div>

    <!-- Add jQuery -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    
    <script>
        $(document).ready(function () {
            function showMessage(message, type) {
                const messageDiv = $("#message");
                messageDiv.removeClass("alert-danger alert-success")
                    .addClass(type === "error" ? "alert-danger" : "alert-success")
                    .text(message)
                    .show();
                
                setTimeout(() => {
                    messageDiv.fadeOut();
                }, 3000);
            }

            $("#form-register").submit(function(event) {
                event.preventDefault();

                // Basic validation
                const phone = $("#phone").val();
                if (!/^[0-9]{10}$/.test(phone)) {
                    showMessage("Số điện thoại không hợp lệ. Vui lòng nhập 10 chữ số", "error");
                    return;
                }

                $.ajax({
                    url: "/auth/signup",
                    method: "POST",
                    data: {
                        username: $("#username").val(),
                        email: $("#email").val(),
                        password: $("#password").val(),
                        phone: $("#phone").val()
                    },
                    success: function(response) {
                        if (response.message === "success") {
                            showMessage("Đăng ký thành công! Đang chuyển hướng...", "success");
                            setTimeout(() => {
                                window.location.href = "/auth/login";
                            }, 2000);
                        } else {
                            showMessage(response.message || "Đăng ký thất bại", "error");
                        }
                    },
                    error: function(xhr) {
                        showMessage(xhr.responseJSON?.message || "Đã xảy ra lỗi trong quá trình đăng ký", "error");
                    }
                });
            });
        });
    </script>
</body>

