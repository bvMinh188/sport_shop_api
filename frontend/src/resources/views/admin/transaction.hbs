                method: 'PUT',
                headers: {
                    'Authorization': `Bearer ${token}`
                },
                credentials: 'include'
            });

            const result = await response.json();

            if (response.ok && result.success) {
                showSuccess('Đơn hàng đã được hoàn thành thành công');
                // Tải lại danh sách đơn hàng
